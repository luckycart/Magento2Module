<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<tab id="luckycart" sortOrder="999" translate="label">
			<label>luckycart</label>
		</tab>
		<section id="api_settings" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
			<label>API Settings</label>
			<tab>luckycart</tab>
			<resource>Yuukoo_Luckycart::config_yuukoo_luckycart</resource>
			<group id="settings" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
				<label>Settings</label>
				<field id="enable" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="select">
					<label>Enable</label>
					<comment/>
					<source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
				</field>
				<field id="api_key" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="text">
					<label>api_key</label>
					<comment/>
				</field>
				<field id="api_secret" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="obscure">
					<label>api_secret</label>
					<comment/>
					<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
					<config_path>api_settings/settings/api_secret</config_path>
				</field>
			</group>
		</section>
		<section id="fields" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
			<label>Fields</label>
			<tab>luckycart</tab>
			<resource>Yuukoo_Luckycart::config_yuukoo_luckycart</resource>
			<group id="brand" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
				<label>Brand</label>
				<field id="brand" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="select">
					<label>Brand</label>
					<comment/>
					<source_model>Magento\Catalog\Model\Product\Attribute\Source\Countryofmanufacture</source_model>
				</field>
			</group>
			<group id="fields" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
				<label>Fields</label>
				<field id="invoice_country" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="select">
					<label>Invoice country</label>
					<comment/>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
			</group>
		</section>
	</system>
</config>
